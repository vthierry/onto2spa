	keywords = {Convergent Thinking, Hippocampus, Prefrontal Cortex, Dopamine, Surprise, Abstraction, Basal Ganglia, Cerebellum, Computational Model, Divergent Thinking, Improvisation, Novelty, Usefulness},
	pages = {104656},
}

