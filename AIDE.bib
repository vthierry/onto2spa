	author = {Lengyel, Máté and Dayan, Peter},
	pages = {8},
	file = {Lengyel_Dayan_Hippocampal_Contributions_to_Control.pdf:files/6347/Lengyel_Dayan_Hippocampal_Contributions_to_Control.pdf:application/pdf},
